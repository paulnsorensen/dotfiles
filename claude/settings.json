{
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/pre-compact.sh\"",
            "statusMessage": "Saving session context...",
            "async": true
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/post-compact.sh\"",
            "statusMessage": "Re-priming MCP tools..."
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "bash-language-server@claude-code-lsps": true,
    "claude-md-management@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "yaml-language-server@claude-code-lsps": true
  }
}
