[
  // Cmd+T for file search (like Sublime Text)
  {
    "key": "cmd+t",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "cmd+p",
    "command": "-workbench.action.quickOpen"
  },
  
  // Cmd+Shift+T for command palette
  {
    "key": "cmd+shift+t",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "cmd+shift+p",
    "command": "-workbench.action.showCommands"
  },

  // Cmd+R for symbol search in file
  {
    "key": "cmd+r",
    "command": "workbench.action.gotoSymbol"
  },

  // Cmd+Shift+R for symbol search in workspace
  {
    "key": "cmd+shift+r",
    "command": "workbench.action.showAllSymbols"
  },

  // Ctrl+G for goto line (like vim)
  {
    "key": "ctrl+g",
    "command": "workbench.action.gotoLine"
  },

  // Vim-style navigation in quick open
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenNavigatePrevious", 
    "when": "inQuickOpen"
  },

  // Vim-style navigation in suggestions
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },

  // Split editor shortcuts
  {
    "key": "cmd+\\",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "cmd+w",
    "command": "workbench.action.closeActiveEditor"
  },

  // Panel toggles
  {
    "key": "cmd+j",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },

  // Terminal shortcuts
  {
    "key": "cmd+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "cmd+shift+`",
    "command": "workbench.action.terminal.new"
  },

  // File explorer
  {
    "key": "cmd+shift+e",
    "command": "workbench.view.explorer"
  },

  // Search
  {
    "key": "cmd+shift+f",
    "command": "workbench.view.search"
  },

  // Git
  {
    "key": "cmd+shift+g",
    "command": "workbench.view.scm"
  },

  // Extensions
  {
    "key": "cmd+shift+x",
    "command": "workbench.view.extensions"
  }
]